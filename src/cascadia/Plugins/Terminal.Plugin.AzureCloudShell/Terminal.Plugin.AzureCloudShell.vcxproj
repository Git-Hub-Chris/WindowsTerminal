    <ProjectGuid>{2d322e1f-8775-4af0-8606-faf2ff7378d6}</ProjectGuid>
    <ProjectName>Terminal.Plugin.AzureCloudShell</ProjectName>
    <RootNamespace>Microsoft.Terminal.Plugins.AzureCloudShell</RootNamespace>
